---
import Layout from '../layouts/Layout.astro';

const title = "Executive Search for Education & Training";
const description = "Board and senior leadership hiring for the UK's education ecosystem. Retained and semi-retained executive search for education providers, edtech, FE colleges, and investors.";
---

<Layout title={title} description={description}>
  <!-- Hero -->
  <section class="hero">
    <div class="container-wide">
      <div class="hero-content">
        <p class="section-label">Executive Search</p>
        <h1>Executive Search for Education & Training</h1>
        <p class="hero-subtitle">
          Board and senior leadership hiring for the UK's education ecosystem. We place leaders who drive growth, navigate complexity, and understand the sector.
        </p>
        <div class="hero-actions">
          <a href="/contact" class="btn btn-primary">Start a Search <span aria-hidden="true">&rarr;</span></a>
        </div>
      </div>
    </div>
  </section>

  <!-- How We Work -->
  <section class="section">
    <div class="container-wide">
      <p class="section-label">Our Approach</p>
      <h2 style="margin-bottom: var(--space-2xl); max-width: 600px;">How We Work</h2>
      <div class="grid-2">
        <div class="approach-card">
          <h3>Retained Search</h3>
          <p>For mission-critical hires: board-level, CEO, MD, commercial director roles. We commit resources exclusively to your search, managing the full process from candidate mapping through negotiation.</p>
          <ul style="color: var(--color-fg-muted); margin-top: var(--space-md);">
            <li>Deep candidate mapping across the sector</li>
            <li>Confidential, discreet process</li>
            <li>Relationship-led approach</li>
            <li>Full support through negotiation</li>
          </ul>
        </div>
        <div class="approach-card">
          <h3>Semi-Retained Search</h3>
          <p>For specialist or senior operational roles where you need sector expertise but flexibility. We work alongside your own recruitment efforts, sourcing and vetting the strongest candidates.</p>
          <ul style="color: var(--color-fg-muted); margin-top: var(--space-md);">
            <li>Targeted candidate sourcing</li>
            <li>Quality-focused approach</li>
            <li>Flexible engagement model</li>
            <li>Faster turnaround than retained</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Who We Place -->
  <section class="section section-subtle">
    <div class="container-wide">
      <p class="section-label">Leadership Roles</p>
      <h2 style="margin-bottom: var(--space-2xl); max-width: 600px;">The leaders we find</h2>
      <div class="grid-3">
        <div class="role-card card">
          <h3>CEO / MD</h3>
          <p>Provider leaders who can manage government relationships, navigate funding uncertainty, and drive commercial growth. Often multi-sector experience.</p>
        </div>
        <div class="role-card card">
          <h3>Commercial Director</h3>
          <p>Sales, business development, and commercial strategy leaders who understand how to scale in a regulated, contracted market.</p>
        </div>
        <div class="role-card card">
          <h3>Director of Curriculum</h3>
          <p>Thought leaders in programme development, quality assurance, and regulatory compliance for training and FE.</p>
        </div>
        <div class="role-card card">
          <h3>COO / Operations Director</h3>
          <p>Operational leaders who can streamline processes, manage quality frameworks, and scale infrastructure.</p>
        </div>
        <div class="role-card card">
          <h3>Chief Finance Officer</h3>
          <p>Finance leaders with education sector knowledge, accustomed to complex funding models and audit environments.</p>
        </div>
        <div class="role-card card">
          <h3>Board Members</h3>
          <p>Non-exec and independent directors with strategic expertise, sector knowledge, and governance experience.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Sectors We Serve -->
  <section class="section">
    <div class="container-wide">
      <p class="section-label">Sector Expertise</p>
      <h2 style="margin-bottom: var(--space-2xl); max-width: 600px;">We specialise in education and skills</h2>
      <div class="sector-detail-grid">
        <div class="sector-detail card">
          <h3>Training Providers</h3>
          <p>Apprenticeship providers, skills training, corporate learning. We understand funding models, government relationships, and the operational challenges of scaling delivery.</p>
          <span class="detail-accent">Specialist hires: Commercial directors, programme leaders, operations directors</span>
        </div>
        <div class="sector-detail card">
          <h3>EdTech</h3>
          <p>Learning platforms, assessment technology, LMS providers. We find leaders who combine tech credibility with education market understanding.</p>
          <span class="detail-accent">Specialist hires: Product leaders, go-to-market directors, education strategists</span>
        </div>
        <div class="sector-detail card">
          <h3>FE Colleges</h3>
          <p>Further education, vocational learning, adult education. We navigate the unique challenges of public-sector governance, funding, and stakeholder complexity.</p>
          <span class="detail-accent">Specialist hires: Principals, curriculum leads, commercial directors</span>
        </div>
        <div class="sector-detail card">
          <h3>Investors & Acquirers</h3>
          <p>PE firms, strategic buyers, education-focused funds. We understand acquisition integration, operational improvements, and board-level strategic hiring.</p>
          <span class="detail-accent">Specialist hires: Integration directors, operational leads, post-acquisition executives</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Bolt -->
  <section class="section section-dark">
    <div class="container-wide">
      <p class="section-label" style="color: rgba(255,255,255,0.5);">Why Bolt Search</p>
      <h2 style="margin-bottom: var(--space-2xl); max-width: 600px;">Built for the education sector</h2>
      <div class="benefit-grid">
        <div class="benefit">
          <h4>Deep Sector Network</h4>
          <p>15+ years in education recruitment. We know who's who, where they work now, and what moves them. Not a database - a working network.</p>
        </div>
        <div class="benefit">
          <h4>Relationship-First</h4>
          <p>We don't scrape databases. Every candidate we approach already knows our name. That changes everything about the conversation.</p>
        </div>
        <div class="benefit">
          <h4>Commercial Pragmatism</h4>
          <p>We understand education finances, government relationships, and the real constraints you face. No silver-bullet solutions - just practical hiring.</p>
        </div>
        <div class="benefit">
          <h4>Absolute Discretion</h4>
          <p>For sensitive hires - particularly board roles and leadership transitions - we handle processes with total confidentiality.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Process -->
  <section class="section">
    <div class="container-wide">
      <p class="section-label">The Process</p>
      <h2 style="margin-bottom: var(--space-2xl); max-width: 600px;">How retained search works</h2>
      <div class="process-steps">
        <div class="step">
          <div class="step-number">1</div>
          <div class="step-content">
            <h4>Discovery & Specification</h4>
            <p>We spend time understanding your organisation, culture, challenges, and success criteria. Not just a job description - the real strategic context.</p>
          </div>
        </div>
        <div class="step">
          <div class="step-number">2</div>
          <div class="step-content">
            <h4>Candidate Mapping</h4>
            <p>We identify strong contenders in our network, and approach those we think are genuine prospects. Quality over speed.</p>
          </div>
        </div>
        <div class="step">
          <div class="step-number">3</div>
          <div class="step-content">
            <h4>Screening & Introduction</h4>
            <p>We conduct detailed conversations with candidates before making introductions. You meet people already warm to the opportunity.</p>
          </div>
        </div>
        <div class="step">
          <div class="step-number">4</div>
          <div class="step-content">
            <h4>Interview & Support</h4>
            <p>We support your interview process, manage feedback, and coach candidates through the decision.</p>
          </div>
        </div>
        <div class="step">
          <div class="step-number">5</div>
          <div class="step-content">
            <h4>Negotiation & Placement</h4>
            <p>We manage offer negotiation, ensure alignment on terms, and smooth the transition to your organisation.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section section-subtle">
    <div class="container-wide" style="text-align: center;">
      <h2 style="margin-bottom: var(--space-md);">Let's find your next leader</h2>
      <p style="max-width: 600px; margin: 0 auto var(--space-xl); font-size: 1.0625rem;">
        Whether you're filling a critical board role or building your leadership team, let's talk about how retained search can accelerate your hiring.
      </p>
      <a href="/contact" class="btn btn-primary">Book a Discovery Call <span aria-hidden="true">&rarr;</span></a>
    </div>
  </section>
</Layout>

<style>
  /* Hero */
  .hero {
    background: var(--color-navy);
    color: var(--color-white);
    padding: var(--space-5xl) 0;
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      radial-gradient(circle at 70% 30%, rgba(59, 130, 246, 0.12) 0%, transparent 60%),
      radial-gradient(circle at 30% 70%, rgba(59, 130, 246, 0.06) 0%, transparent 60%);
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    max-width: 720px;
  }

  .hero .section-label {
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: var(--space-lg);
  }

  .hero h1 {
    color: var(--color-white);
    font-size: clamp(2.5rem, 6vw, 3.5rem);
    margin-bottom: var(--space-lg);
    line-height: 1.1;
  }

  .hero-subtitle {
    font-size: clamp(1.0625rem, 2vw, 1.25rem);
    color: rgba(255, 255, 255, 0.75);
    line-height: 1.6;
    margin-bottom: var(--space-2xl);
  }

  .hero-actions {
    display: flex;
    gap: var(--space-md);
  }

  .hero .btn-primary {
    background: var(--color-accent);
    color: white;
  }

  .hero .btn-primary:hover {
    background: var(--color-accent-dark);
  }

  /* Approach cards */
  .approach-card {
    padding: var(--space-xl);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    background: var(--color-bg-elevated);
  }

  .approach-card h3 {
    margin-bottom: var(--space-md);
  }

  .approach-card ul {
    list-style: none;
    padding-left: 0;
  }

  .approach-card li {
    padding-left: 1.5rem;
    position: relative;
    margin-bottom: var(--space-sm);
    font-size: 0.9375rem;
  }

  .approach-card li::before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: var(--color-accent);
    font-weight: bold;
  }

  /* Role cards */
  .role-card {
    text-decoration: none;
    color: inherit;
  }

  .role-card h3 {
    margin-bottom: var(--space-sm);
    font-size: 1.125rem;
  }

  .role-card p {
    font-size: 0.9375rem;
  }

  /* Sector detail */
  .sector-detail-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-xl);
  }

  .sector-detail h3 {
    margin-bottom: var(--space-sm);
  }

  .detail-accent {
    display: block;
    margin-top: var(--space-md);
    padding-top: var(--space-md);
    border-top: 1px solid var(--color-border);
    font-size: 0.875rem;
    color: var(--color-accent);
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .sector-detail-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Benefits section (dark) */
  .benefit-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-2xl);
    margin-top: var(--space-2xl);
  }

  .benefit h4 {
    color: white;
    margin-bottom: var(--space-sm);
  }

  .benefit p {
    color: rgba(255, 255, 255, 0.75);
    font-size: 0.9375rem;
  }

  @media (max-width: 768px) {
    .benefit-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Process steps */
  .process-steps {
    display: flex;
    flex-direction: column;
    gap: var(--space-2xl);
    max-width: 800px;
  }

  .step {
    display: flex;
    gap: var(--space-xl);
    align-items: flex-start;
  }

  .step-number {
    flex-shrink: 0;
    width: 50px;
    height: 50px;
    background: var(--color-accent);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.25rem;
  }

  .step-content h4 {
    margin-bottom: var(--space-xs);
  }

  .step-content p {
    font-size: 0.9375rem;
    color: var(--color-fg-muted);
  }

  @media (max-width: 640px) {
    .step {
      gap: var(--space-md);
    }

    .step-number {
      width: 40px;
      height: 40px;
      font-size: 1rem;
    }
  }
</style>
