---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const articles = await getCollection('knowledge-base');
  return articles.map(entry => ({
    params: { slug: entry.id.replace(/\.md$/, '') },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={entry.data.title} description={entry.data.description} article={true}>
  <article class="article-page">
    <div class="container">
      <header class="article-header animate-on-scroll">
        <div class="article-meta">
          <span class="tag">{entry.data.practiceArea}</span>
          <time datetime={entry.data.publishedAt.toISOString()}>
            {entry.data.publishedAt.toLocaleDateString('en-GB', { day: 'numeric', month: 'long', year: 'numeric' })}
          </time>
        </div>
        <h1>{entry.data.title}</h1>
        <p class="article-description">{entry.data.description}</p>
      </header>

      <div class="prose animate-on-scroll">
        <Content />
      </div>

      <footer class="article-footer animate-on-scroll">
        <div class="article-cta">
          <h3>Ready to implement this?</h3>
          <p>Our team has worked with education leaders on these exact challenges. Let's discuss your situation.</p>
          <a href="/contact" class="btn btn-primary">Start a Conversation &rarr;</a>
        </div>
        <nav class="article-nav">
          <a href="/knowledge-base">&larr; Back to Knowledge Base</a>
        </nav>
      </footer>
    </div>
  </article>
</Layout>

<style>
  .article-page {
    padding: var(--space-3xl) 0 var(--space-4xl);
  }

  .container {
    max-width: var(--content-width);
    margin: 0 auto;
    padding: 0 var(--space-lg);
  }

  .article-header {
    margin-bottom: var(--space-3xl);
    padding-bottom: var(--space-2xl);
    border-bottom: 1px solid var(--color-border);
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-lg);
    flex-wrap: wrap;
  }

  .article-meta time {
    font-size: 0.8125rem;
    color: var(--color-fg-subtle);
  }

  .article-header h1 {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    margin-bottom: var(--space-md);
    max-width: 640px;
  }

  .article-description {
    font-size: 1.125rem;
    color: var(--color-fg-muted);
    max-width: 600px;
  }

  .article-footer {
    margin-top: var(--space-3xl);
    padding-top: var(--space-2xl);
    border-top: 1px solid var(--color-border);
  }

  .article-cta {
    background: var(--color-bg-subtle);
    padding: var(--space-xl);
    border-radius: 12px;
    margin-bottom: var(--space-xl);
  }

  .article-cta h3 {
    margin-bottom: var(--space-xs);
  }

  .article-cta p {
    margin-bottom: var(--space-md);
    font-size: 0.9375rem;
  }

  .article-nav {
    display: block;
  }

  .article-nav a {
    font-size: 0.9375rem;
  }
</style>
