---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const insights = await getCollection('insights');
  return insights.map(entry => ({
    params: { slug: entry.id.replace(/\.md$/, '') },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={entry.data.title} description={entry.data.description} article={true}>
  <article class="article-page">
    <div class="container">
      <header class="article-header">
        <div class="article-meta">
          <span class="tag">{entry.data.contentType}</span>
          {entry.data.sector !== 'general' && <span class="tag">{entry.data.sector.replace('-', ' ')}</span>}
          <time datetime={entry.data.publishedAt.toISOString()}>
            {entry.data.publishedAt.toLocaleDateString('en-GB', { day: 'numeric', month: 'long', year: 'numeric' })}
          </time>
          {entry.data.readTime && <span class="read-time">{entry.data.readTime}</span>}
        </div>
        <h1>{entry.data.title}</h1>
        <p class="article-description">{entry.data.description}</p>
      </header>

      <div class="prose">
        <Content />
      </div>

      <footer class="article-footer">
        <div class="article-subscribe">
          <h3>Get insights like this every week</h3>
          <p>Subscribe to The Bolt Briefing â€” weekly intelligence on the education, training, and skills sector.</p>
          <form class="subscribe-inline" action="https://app.beehiiv.com/subscribe" method="POST" target="_blank">
            <input type="hidden" name="publication_id" value="pub_ecd944a7-3f6e-4043-8597-6990a30c37cf">
            <input type="email" name="email" placeholder="your@email.com" required>
            <button type="submit" class="btn btn-primary">Subscribe</button>
          </form>
        </div>
        <a href="/insights">&larr; Back to Insights</a>
      </footer>
    </div>
  </article>
</Layout>

<style>
  .article-page {
    padding: var(--space-3xl) 0 var(--space-4xl);
  }

  .article-header {
    margin-bottom: var(--space-3xl);
    padding-bottom: var(--space-2xl);
    border-bottom: 1px solid var(--color-border);
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-lg);
    flex-wrap: wrap;
  }

  .article-meta time,
  .read-time {
    font-size: 0.8125rem;
    color: var(--color-fg-subtle);
  }

  .article-header h1 {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    margin-bottom: var(--space-md);
    max-width: 640px;
  }

  .article-description {
    font-size: 1.125rem;
    color: var(--color-fg-muted);
    max-width: 600px;
  }

  .article-footer {
    margin-top: var(--space-3xl);
    padding-top: var(--space-2xl);
    border-top: 1px solid var(--color-border);
  }

  .article-subscribe {
    background: var(--color-bg-subtle);
    padding: var(--space-xl);
    border-radius: 12px;
    margin-bottom: var(--space-xl);
  }

  .article-subscribe h3 {
    margin-bottom: var(--space-xs);
  }

  .article-subscribe p {
    margin-bottom: var(--space-md);
    font-size: 0.9375rem;
  }

  .subscribe-inline {
    display: flex;
    gap: var(--space-sm);
    max-width: 400px;
  }

  .subscribe-inline input {
    flex: 1;
    padding: 0.75rem 1rem;
    border: 1px solid var(--color-border-strong);
    border-radius: 6px;
    font-size: 0.9375rem;
    background: white;
  }

  .article-footer > a {
    font-size: 0.9375rem;
  }
</style>
