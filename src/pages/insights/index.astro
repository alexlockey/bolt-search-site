---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const title = "Insights & Analysis";
const description = "Long-form analysis of the education, training, and skills sector. Market trends, leadership insights, and strategic analysis for education executives and investors.";

// Get all insights from content collection
const allInsights = await getCollection('insights');

// Sort by date descending
const articles = allInsights
  .sort((a, b) => b.data.publishedAt.getTime() - a.data.publishedAt.getTime())
  .map((entry) => ({
    slug: entry.id.replace(/\.md$/, ''),
    title: entry.data.title,
    date: entry.data.publishedAt.toISOString().split('T')[0],
    excerpt: entry.data.description,
    tag: entry.data.contentType,
    readTime: entry.data.readTime || "5 min read",
    accent: getColorByTag(entry.data.sector),
  }));

const tagStyles: Record<string, string> = {
  'insights': '--tag-bg: #EFF6FF; --tag-color: #1D4ED8;',
  'analysis': '--tag-bg: #ECFDF5; --tag-color: #047857;',
  'market-analysis': '--tag-bg: #EFF6FF; --tag-color: #1D4ED8;',
  'sector-intelligence': '--tag-bg: #ECFDF5; --tag-color: #047857;',
  'research': '--tag-bg: #F5F3FF; --tag-color: #6D28D9;',
  'training-providers': '--tag-bg: #F5F3FF; --tag-color: #6D28D9;',
  'edtech': '--tag-bg: #FFFBEB; --tag-color: #B45309;',
  'fe-colleges': '--tag-bg: #FDF2F8; --tag-color: #BE185D;',
};

function getColorByTag(sector: string): string {
  const colors: Record<string, string> = {
    'training-providers': '#3B82F6',
    'edtech': '#10B981',
    'fe-colleges': '#8B5CF6',
    'investors': '#F59E0B',
    'general': '#EC4899',
  };
  return colors[sector] || '#3B82F6';
}
---

<Layout title={title} description={description}>
  <!-- Hero -->
  <section class="insights-hero">
    <div class="container-wide">
      <div style="max-width: 640px;">
        <p class="section-label">Insights & Analysis</p>
        <h1>Sector intelligence for education leaders and investors</h1>
        <p style="font-size: 1.0625rem; margin-top: var(--space-md); color: var(--color-fg-muted);">
          Long-form analysis, market trends, and strategic thinking on the UK education, training, and skills sector.
        </p>
      </div>
    </div>
  </section>

  <!-- Featured article -->
  {articles.length > 0 && (
    <section class="section animate-on-scroll" style="padding-top: var(--space-2xl);">
      <div class="container-wide">
        <a href={`/insights/${articles[0].slug}`} class="featured-article">
          <div class="featured-accent" style={`background: ${articles[0].accent};`}></div>
          <div class="featured-content">
            <div class="featured-meta">
              <span class="tag-styled" style={tagStyles[articles[0].tag] || '--tag-bg: #EFF6FF; --tag-color: #1D4ED8;'}>{articles[0].tag}</span>
              <span class="meta-text">{articles[0].readTime}</span>
            </div>
            <h2>{articles[0].title}</h2>
            <p>{articles[0].excerpt}</p>
            <span class="read-link">Read the full analysis &rarr;</span>
          </div>
        </a>
      </div>
    </section>
  )}

  <!-- Articles Grid -->
  <section class="section">
    <div class="container-wide">
      <div class="articles-grid">
        {articles.slice(1).map((article, index) => (
          <a href={`/insights/${article.slug}`} class="article-card animate-on-scroll" style={`animation-delay: ${index * 0.1}s;`}>
            <div class="card-accent" style={`background: ${article.accent};`}></div>
            <div class="card-body">
              <div class="card-meta">
                <span class="tag-styled" style={tagStyles[article.tag] || '--tag-bg: #EFF6FF; --tag-color: #1D4ED8;'}>{article.tag}</span>
                <span class="meta-text">{article.readTime}</span>
              </div>
              <h3>{article.title}</h3>
              <p>{article.excerpt}</p>
              <div class="card-footer">
                <time datetime={article.date}>
                  {new Date(article.date).toLocaleDateString('en-GB', { day: 'numeric', month: 'short', year: 'numeric' })}
                </time>
                <span class="read-link">Read &rarr;</span>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section section-subtle">
    <div class="container" style="text-align: center;">
      <h2 style="margin-bottom: var(--space-md);">Get insights like this weekly</h2>
      <p style="margin-bottom: var(--space-lg); color: var(--color-fg-muted); max-width: 480px; margin-left: auto; margin-right: auto;">
        Subscribe to The Bolt Briefing - sector intelligence, leadership moves, and market analysis for education professionals.
      </p>
      <a href="/subscribe" class="btn btn-primary">Subscribe to the Briefing <span aria-hidden="true">&rarr;</span></a>
    </div>
  </section>
</Layout>

<style>
  .insights-hero {
    padding: var(--space-3xl) 0 var(--space-xl);
  }

  .insights-hero h1 {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
  }

  /* Featured article */
  .featured-article {
    display: block;
    text-decoration: none;
    color: inherit;
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
    position: relative;
  }

  .featured-article:hover {
    border-color: var(--color-border-strong);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.08);
    transform: translateY(-3px);
  }

  .featured-accent {
    height: 4px;
    width: 100%;
  }

  .featured-content {
    padding: var(--space-2xl) var(--space-2xl) var(--space-xl);
  }

  .featured-meta {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-lg);
  }

  .featured-content h2 {
    font-size: clamp(1.5rem, 3vw, 2rem);
    margin-bottom: var(--space-md);
    max-width: 720px;
    line-height: 1.25;
  }

  .featured-content > p {
    font-size: 1.0625rem;
    color: var(--color-fg-muted);
    max-width: 640px;
    line-height: 1.7;
    margin-bottom: var(--space-lg);
  }

  /* Tag styling */
  .tag-styled {
    display: inline-block;
    padding: 0.3rem 0.875rem;
    border-radius: 100px;
    font-size: 0.8125rem;
    font-weight: 600;
    background: var(--tag-bg, var(--color-accent-light));
    color: var(--tag-color, var(--color-accent-dark));
  }

  .meta-text {
    font-size: 0.8125rem;
    color: var(--color-fg-subtle);
  }

  .read-link {
    color: var(--color-accent);
    font-weight: 500;
    font-size: 0.9375rem;
  }

  /* Articles grid */
  .articles-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-xl);
  }

  .article-card {
    display: block;
    text-decoration: none;
    color: inherit;
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.25s ease;
  }

  .article-card:hover {
    border-color: var(--color-border-strong);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.06);
    transform: translateY(-2px);
  }

  .card-accent {
    height: 3px;
    width: 100%;
  }

  .card-body {
    padding: var(--space-xl);
    display: flex;
    flex-direction: column;
    height: calc(100% - 3px);
  }

  .card-meta {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-md);
  }

  .article-card h3 {
    font-size: 1.125rem;
    margin-bottom: var(--space-sm);
    line-height: 1.35;
  }

  .article-card p {
    font-size: 0.9375rem;
    color: var(--color-fg-muted);
    flex: 1;
    margin-bottom: var(--space-lg);
  }

  .card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: var(--space-md);
    border-top: 1px solid var(--color-border);
  }

  .card-footer time {
    font-size: 0.8125rem;
    color: var(--color-fg-subtle);
  }

  .article-card:hover .read-link {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .articles-grid {
      grid-template-columns: 1fr;
    }
  }

  .container {
    max-width: var(--content-width);
    margin: 0 auto;
    padding: 0 var(--space-lg);
  }
</style>
